    <script>
        // Snowflake Creation Script
        document.addEventListener('DOMContentLoaded', function() {
            const snowflakeContainer = document.getElementById('snowflakes');
            if (snowflakeContainer) {
                const numberOfSnowflakes = 50; // Adjust for more/less snowflakes

                for (let i = 0; i < numberOfSnowflakes; i++) {
                    let snowflake = document.createElement('div');
                    snowflake.className = 'snowflake';
                    
                    let size = Math.random() * 4 + 1; // size between 1px and 5px
                    snowflake.style.width = `${size}px`;
                    snowflake.style.height = `${size}px`;
                    
                    snowflake.style.left = `${Math.random() * 100}%`; // random horizontal position
                    
                    let duration = Math.random() * 5 + 5; // fall duration between 5s and 10s
                    snowflake.style.animationDuration = `${duration}s`;
                    
                    let delay = Math.random() * -10; // start at different times
                    snowflake.style.animationDelay = `${delay}s`;

                    snowflakeContainer.appendChild(snowflake);
                }
            }
        });
    </script>

